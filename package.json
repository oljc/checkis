{
  "name": "checkis-monorepo",
  "private": true,
  "author": "oljc",
  "license": "MIT",
  "scripts": {
    "gen": "tsx scripts/gen.ts",
    "dev": "pnpm --filter website dev",
    "build": "pnpm run gen && pnpm --filter checkis build",
    "build:website": "pnpm --filter website build",
    "publish": "pnpm run build && tsx scripts/publish.ts",
    "test": "pnpm --filter checkis test",
    "test:dev": "pnpm --filter checkis test:dev",
    "check": "biome check",
    "check:write": "biome check --write",
    "check:types": "pnpm -r run check:types",
    "format": "biome format --write",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.7.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "lefthook": "^1.13.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.15.9"
  }
}
