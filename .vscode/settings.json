{
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/.git": true,
    "**/dist": true,
    "**/coverage": true,
    "**/compiled": true,
    "**/node_modules": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "files.exclude": {
    "**/.DS_Store": true
  },
  "mdx.validate.validateFileLinks": "ignore",
  "cSpell.words": [
    "biomejs",
    "checkis",
    "Dedupe",
    "edgeone",
    "esnext",
    "fumadocs",
    "llms",
    "Llms",
    "nvmrc",
    "rsbuild",
    "rspress",
    "rstack",
    "rstest",
    "tailwindcss"
  ],
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
